{% extends 'base.html.twig' %}

{% block title %}!{% endblock %}

{% block body %}
<div class="container">
<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Create Account</h4>
    <!-- Form opening-->
	<form action="../edited" method="post" >

    <input name="id" class="form-control" placeholder="Id" value="{{a.id}}" type="text" Hidden>
    <div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 </div>
        <input name="name" class="form-control" placeholder="Full name" value="{{a.name}}" type="text">
    </div> <!-- form-group// -->
     <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
		 </div>
        <input name="email" class="form-control" placeholder="Email address" value="{{a.email}}" type="email">
    </div>  
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-address-card"></i> </span>
		 </div>
        <input name="address" class="form-control" placeholder="Address" value="{{a.address}}"  type="text">
    </div> <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
		</div>
		<input name="phoneNumber" class="form-control" placeholder="Phone number" value="{{a.phoneNumber}}"   type="text">
    </div> <!-- form-group// -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Edit Account  </button>
    </div> <!-- form-group// -->                                                                 
</form>
{%for message in app.flashes('success')%}
<div class="alert alert-success">
    {{message}}
</div>
{%endfor%}

</article>
</div> <!-- card.// -->
  
</div> 
<!--container end.//-->

{% endblock %}
